<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp">

    <TextView
        android:id="@+id/text_view_measure_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/measure_title_margin_top"
        android:layout_marginStart="@dimen/measure_title_margin_start"
        android:text="Measure:" />

    <TextView
        android:id="@+id/text_view_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/measure_title_margin_start"
        app:layout_constraintTop_toTopOf="@id/text_view_measure_label"
        app:layout_constraintStart_toEndOf="@id/text_view_measure_label" />

    <TextView
        android:id="@+id/text_view_measure_time_signature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_view_measure_label"
        app:layout_constraintTop_toBottomOf="@id/text_view_measure_label"
        android:text="Time Signature:" />

    <TextView
        android:id="@+id/text_view_measure_time_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/measure_title_margin_start"
        app:layout_constraintTop_toTopOf="@id/text_view_measure_time_signature_label"
        app:layout_constraintStart_toEndOf="@id/text_view_measure_time_signature_label" />
</android.support.constraint.ConstraintLayout>
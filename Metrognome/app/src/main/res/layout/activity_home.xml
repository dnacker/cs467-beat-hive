<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/newEditor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/btn_rounded"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/record_icon"
        android:text="@string/create_new_beat"
        app:layout_constraintBottom_toTopOf="@+id/beatLibrary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basicMetronome" />

    <Button
        android:id="@+id/beatLibrary"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/btn_rounded"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/beat_library_icon"
        android:text="@string/your_beats"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEditor" />

    <Button
        android:id="@+id/basicMetronome"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/btn_rounded"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/metronome_vector"
        android:onClick="startPlayback"
        android:text="@string/basic_metronome"
        app:layout_constraintBottom_toTopOf="@+id/newEditor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/recent_beats"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beatLibrary"
        app:layout_constraintBottom_toTopOf="@+id/recents"
        tools:layout_editor_absoluteY="233dp" />

    <LinearLayout
        android:id="@+id/recents"
        android:layout_width="310dp"
        android:layout_height="230dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">

            <TableRow>

                <Button
                    android:id="@+id/recent1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/btn_rounded"
                    android:drawableStart="@drawable/metronome_vector"
                    android:onClick="startPlayback"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/mambo_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/recent1_edit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.2"
                    android:drawableStart="@drawable/ic_edit"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/recent2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/btn_rounded"
                    android:drawableStart="@drawable/metronome_vector"
                    android:onClick="startPlayback"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/mambo_6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/recent2_edit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.2"
                    android:drawableStart="@drawable/ic_edit"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/recent3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/btn_rounded"
                    android:drawableStart="@drawable/metronome_vector"
                    android:onClick="startPlayback"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/mambo_7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/recent3_edit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.2"
                    android:drawableStart="@drawable/ic_edit"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </TableRow>
        </TableLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>